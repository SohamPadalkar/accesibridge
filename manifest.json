{
  "manifest_version": 3,
  "name": "AccessiBridge",
  "version": "1.0.0",
  "description": "AI-powered accessibility auditing and fixing for the web",
  "permissions": [
    "activeTab",
    "scripting",
    "tabs"
  ],
  "host_permissions": [
    "http://localhost:5000/*",
    "<all_urls>"
  ],
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "content.js"
      ],
      "run_at": "document_end"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "AccessiBridge - Make the Web Accessible"
  }
}